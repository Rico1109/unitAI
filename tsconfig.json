{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/agents/*": ["src/agents/*"],
      "@/backends/*": ["src/backends/*"],
      "@/workflows/*": ["src/workflows/*"],
      "@/services/*": ["src/services/*"],
      "@/tools/*": ["src/tools/*"],
      "@/config/*": ["src/config/*"],
      "@/domain/*": ["src/domain/*"],
      "@/utils/*": ["src/utils/*"],
      "@/repositories/*": ["src/repositories/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}