{
    "version": "2.0",
    "description": "Skill activation triggers for Claude Code with behavior flags for intelligent activation.",
    "skills": {
        "memory-search-reminder": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Reminds Claude to search memories before starting new work, implementing features, or making decisions. Ensures Claude checks for past solutions, decisions, and patterns using openmemory-search-memories before diving into new implementations.",
            "behaviorFlags": {
                "showEveryTime": false,
                "minimumConfidence": 0.75,
                "canBeDismissed": true,
                "dismissDurationMinutes": 60
            },
            "promptTriggers": {
                "keywords": [
                    "implement",
                    "feature",
                    "solution",
                    "decision",
                    "how did we",
                    "previously",
                    "past",
                    "memory",
                    "remember",
                    "recall",
                    "similar",
                    "before",
                    "earlier",
                    "history",
                    "previous"
                ],
                "intentPatterns": [
                    "(how did|did we|was there).*?(implementation|solution|decision|approach)",
                    "(implement|create|add|build).*?(feature|solution|functionality)",
                    "(what was|how did|did we).*?(handle|solve|approach)",
                    "(similar|like|related).*?(implementation|solution|feature)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "**/*.py",
                    "**/*.md",
                    "**/src/**",
                    "**/api/**",
                    "**/shared/**",
                    "**/models/**",
                    "**/routes/**",
                    "**/services/**",
                    "**/utils/**"
                ],
                "contentPatterns": [
                    "def ",
                    "class ",
                    "function",
                    "implementation",
                    "solution",
                    "feature",
                    "design",
                    "architecture"
                ]
            }
        },
