# unitAI MCP Server — Environment Configuration
#
# Copy this file to .env and uncomment/set variables as needed.
# The server runs with zero configuration — all defaults are production-safe.
#
# Variable naming: all project-specific variables are prefixed with UNITAI_
# so they don't collide with other tools on your system.

# =============================================================================
# Runtime
# =============================================================================

# Environment mode: development | production | test
# Falls back to NODE_ENV if unset, then defaults to "development".
# Default: development
# UNITAI_ENV=development

# =============================================================================
# Security (all default to false — fail-closed)
# =============================================================================

# Allow backends (cursor, rovodev, qwen) to run in auto-approve mode.
# ⚠️  Only enable in development with HIGH autonomy level. Never in production.
# Default: false
# UNITAI_ALLOW_AUTO_APPROVE=false

# Allow the droid tool to use --skip-permissions-unsafe.
# ⚠️  Requires autonomyLevel=high. Never allowed in production.
# Default: false
# UNITAI_ALLOW_PERMISSION_BYPASS=false

# =============================================================================
# Logging
# =============================================================================

# Minimum log level: debug | info | warn | error
# Default: info
# UNITAI_LOG_LEVEL=info

# Mirror structured logs to stderr/console output.
# Disabled by default to avoid polluting MCP stdio transport.
# Default: false
# UNITAI_LOG_TO_CONSOLE=false

# Legacy debug flag for internal debug logging.
# Equivalent to setting UNITAI_LOG_LEVEL=debug.
# Default: false
# UNITAI_DEBUG=false
